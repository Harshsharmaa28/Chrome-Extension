
    {
      "manifest_version": 3,
      "name": "ROBOI",
      "version": "1.0",
      "description": "Ask questions on YouTube watch pages and get answers from Gemini API.",
      "permissions": ["activeTab", "scripting"],
      "background": {
        "service_worker": "background.js"
      },
      "content_scripts": [
        {
          "matches": ["https://www.youtube.com/*"],
          "js": ["content.js"]
        }
      ],
      "action": {
        "default_popup": "popup.html",
        "default_icon": {
          "16": "icon.png"
        }
      }
    }
    